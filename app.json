{
  "name": "AlphaInsider Trading Bot",
  "description": "Follow strategies on AlphaInsider and make trades on your brokerage.",
  "repository": "https://github.com/AlphaInsider/trading_bot",
  "scripts": {
    "postdeploy": "node app.js"
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Standard-1X"
    }
  },
  "env": {
    "ALPHAINSIDER_API_KEY": {
      "description": "",
      "required": true
    },
    "STRATEGY_ID": {
      "description": "",
      "required": true
    },
    "ALPACA_KEY": {
      "description": "",
      "required": true
    },
    "ALPACA_SECRET": {
      "description": "",
      "required": true
    },
    "ALPACA_ACCOUNT_TYPE": {
      "description": "",
      "value": "paper",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}