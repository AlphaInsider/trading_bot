{
  "name": "alpha_bot",
  "author": "AlphaInsider",
  "description": "Auto trade any AlphaInsider strategy with your broker.",
  "version": "1.2.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "start": "node ./express.js",
    "dev": "nodemon ./express.js",
    "test": "node test.js",
    "electron": "electron electron.js",
    "electron-build": "electron-builder"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.0.1",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "electron-updater": "^6.1.8",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "lodash": "^4.17.21",
    "mathjs": "^11.8.0",
    "moment": "^2.29.4",
    "nanoid": "^3.1.11",
    "pg": "^8.11.3",
    "semver": "^7.5.4",
    "serve-favicon": "^2.5.0",
    "sqlite3": "5.1.6",
    "ws": "^8.13.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "dotenv": "^16.3.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "build": {
    "productName": "AlphaBot",
    "appId": "com.alphainsider.alphabot",
    "asar": false,
    "artifactName": "${productName}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "electron_assets"
    },
    "files": [
      "database/**/*",
      "electron_assets/**/*",
      "lib/**/*",
      "public/**/*",
      "electron.js",
      "express.js",
      "package.json"
    ],
    "afterSign": "./electron_assets/notarize.js",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "entitlements": "./electron_assets/entitlements.mac.plist",
      "entitlementsInherit": "./electron_assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
